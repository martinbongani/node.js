    .mb-3
      label.form-label(for='nin') National ID Number
      input#exampleInputNIN.form-control(type='text' aria-describedby='emailHelp' name='fathersNID')
    .mb-3
      label.birthday(for='exampleCheck1') Date of Birth:
      input#exampleDOB.form-control(type='date' name='fathersDOB')
    .mb-3
      label.form-label(for='maritalStatus') Marital Status
      select.form-select(aria-label='Default select example' name='fathersMaritalStatus')
        option(value='') Select Marital Status
        option(value='single') Single
        option(value='married') Married
        option(value='divorced') Divorced
        option(value='widowed') Widowed
