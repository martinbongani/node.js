doctype html
head
  link(rel="stylesheet", href="css/signup.css")
h2 Modal Signup Form
button(onclick="document.getElementById('id01').style.display='block'" style='width: auto')
  | Sign Up
#id01.modal
  span.close(onclick="document.getElementById('id01').style.display='none'" title='Close Modal') &times;
  form.modal-content(action='/signup' method='POST')
    .container
      h1 Sign Up
      p Please fill in this form to create an account.
      hr
      label(for='email')
        b Email
      input(type='text' placeholder='Enter Email' name='email')
      label(for='psw')
        b Password
      input(type='password' placeholder='Enter Password' name='psw' required='')
      label(for='psw-repeat')
        b Repeat Password
      input(type='password' placeholder='Repeat Password' name='psw-repeat' required='')
      label
        input(type='checkbox' checked='checked' name='remember' style='margin-bottom: 15px')
        |             Remember me
      p
        | By creating an account you agree to our
        a(href='#' style='color: dodgerblue') Terms &amp; Privacy
        | .
      .clearfix
        button.cancelbtn(type='button' onclick="document.getElementById('id01').style.display='none'")
          | Cancel
        button.signupbtn(type='submit') Sign Up
